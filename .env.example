# Environment variables
AUTO_APPROVE_USD=50

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/virtual_ai_org

# LLM Provider Keys (do not commit .env with real keys)
# OPENAI_API_KEY=...
# ANTHROPIC_API_KEY=...

# Integration Keys
# LINEAR_API_KEY=...
# LINEAR_MOCK=false

# Notion MCP Integration
# NOTION_OAUTH_TOKEN=...
# NOTION_MCP_URL=https://mcp.notion.com/mcp
# NOTION_MOCK=false

# Optional: S3 Storage
# STORE_TO_S3=true
# S3_BUCKET=...

# Optional: Redis
# REDIS_URL=redis://localhost:6379

# Auth Configuration
# JWT_SECRET=your-secret-key-change-in-production
# ALLOW_SIGNUP=true
# ADMIN_SIGNUP_SECRET=...
